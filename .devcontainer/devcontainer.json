{
  "name": "LHR Solar Embedded Sharepoint",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--privileged",
    "--network=host"
  ],
  "mounts": [
    "type=bind,source=${localWorkspaceFolder},target=/workdir,consistency=cached"//,
    // "type=bind,source=\\\\.\\pipe\\openssh-ssh-agent,target=/ssh-agent"
    // "type=bind,source=${localWorkspaceFolder}/.devcontainer/.ssh,target=/home/dev/.ssh"

    // "type=bind,source=/dev/bus/usb,target=/dev/bus/usb",
    // "type=bind,source=/dev,target=/dev"
    // "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/dev/.ssh,type=bind,readonly",
    // "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached",

    // Windows: bind the OpenSSH named pipe into /ssh-agent
    // "source=\\\\.\\pipe\\openssh-ssh-agent,target=/ssh-agent,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "HOME": "/home/dev"//,
    //"SSH_AUTH_SOCK": "/ssh-agent"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "marus25.cortex-debug",
        "dan-c-underwood.arm",
        "twxs.cmake",
        "ms-vscode.makefile-tools",
        "ms-python.python",
        "ms-vscode.hexeditor",
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "C_Cpp.default.compilerPath": "/usr/local/bin/arm-none-eabi-gcc",
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.cppStandard": "c++17",
        "C_Cpp.default.intelliSenseMode": "gcc-arm",
        "cortex-debug.armToolchainPath": "/usr/local/bin",
        "cortex-debug.openocdPath": "/usr/local/bin/openocd",
        "cortex-debug.stlinkPath": "/usr/local/bin/st-flash"
      }
    }
  },
  "containerEnv": {
    "CROSS_COMPILE": "arm-none-eabi-",
    "ARCH": "arm"
  },
  "postCreateCommand": [
    "/bin/sh", "-c", 
    // "sudo chown -R dev:dev /workdir && sudo chown -R dev:dev /home/dev && 
    "/workdir/.devcontainer/setup.sh"
  ],
  "remoteUser": "dev",
  "workspaceFolder": "/workdir",
  "forwardPorts": [
    3333,
    8080
  ],
  "portsAttributes": {
    "3333": {
      "label": "OpenOCD GDB Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Web Server",
      "onAutoForward": "openPreview"
    }
  }
}