// .devcontainer/devcontainer.json
{
  "name": "Embedded Sharepoint",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--privileged"
    //"--rm", // handled by VS Code extension
    //"-it" // handled by VS Code extension
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "editor.formatOnSave": true
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools",
    "ms-python.python",
    "eamodio.gitlens"
  ],
  // Optional: 
  // "forwardPorts": [ 8080, 8081 ]            // If you want to forward any ports to the host
  // "workspaceFolder": "/Embedded-Sharepoint" // if you need to override the default workspace path
}